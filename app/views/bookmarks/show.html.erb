<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514986888952-8cd320577b68?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1176&q=80);">
  <div class="container">
    <h1>Make My Recipe Better! <strong>Sharing flavor with the world!!</strong>!</h1>
    <p>United we cook!</p>
    <%= form_with url: recipes_path, method: :get, class: "d-flex col-6" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a recipe"
      %>
      <%= submit_tag "Search", class: "btn btt-red-sm" %>
    <% end %>
  </div>
</div>
<div class="container my-5">
  <h2><strong>Featured recipes:</strong></h2>
  <p class= "fw-semibold">Not sure what to cook <%= link_to "Show me all recipes!", recipes_path, class: "btn btt-red-sm" %></p>
</div>
<%= render "shared/recipe_card" %>
<div class= "d-flex justify-content-around mt-5">
  <a href="https://www.homedepot.com/" target="_blank" rel="noopener noreferrer">
  <%= image_tag "hm-offers", Height: 100%>
  </a>
  <a href="https://www.target.com/" target="_blank" rel="noopener noreferrer">
  <%= image_tag "deals_target", Height: 100%>
  </a>
</div>
